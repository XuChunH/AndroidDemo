<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.xch.androiddemo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme.Dark" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listview.ListActivity"
            android:label="@string/title_activity_list" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".webview.WebViewActivity"
            android:label="@string/title_activity_web_view" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actionbar.ActionbarActivity"
            android:label="@string/title_activity_actionbar"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyTheme.Light" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".notification.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/MyTheme.Light" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".textview.TextVIewActivity"
            android:label="@string/title_activity_text_view" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loader.AysncTaskLoaderActivity"
            android:label="@string/title_activity_aysnc_task_loader" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".aysnchttp.AsyncHttpActivity"
            android:label="@string/title_activity_async_http"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".aysnchttp.AysncHttpJsonActivity"
            android:label="@string/title_activity_async_http_json"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".json.JacksonParserActivity"
            android:label="@string/title_activity_jackson_parser" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".camera.CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gps.GPSActivity"
            android:label="@string/title_activity_gps" >
        </activity>
        <activity
            android:name=".toolbar.ToolbarActivity"
            android:label="@string/title_activity_toolbar"
            android:theme="@style/toolbarTheme">
            <intent-filter>
                <action android:name="cn.xch.action.default" />

                <category android:name="cn.xch.category.default" />
            </intent-filter>
        </activity>
    </application>

</manifest>
